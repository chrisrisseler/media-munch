<section
  class="invisible fixed z-10 inset-0 overflow-y-auto"
  id="register-modal"
>
  <section
    class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0"
  >
    <!--
      Background overlay, show/hide based on modal state.

      Entering: "ease-out duration-300"
        From: "opacity-0"
        To: "opacity-100"
      Leaving: "ease-in duration-200"
        From: "opacity-100"
        To: "opacity-0"
    -->
    <section class="fixed inset-0 transition-opacity" aria-hidden="true">
      <section class="absolute inset-0 bg-gray-500 opacity-75"></section>
    </section>

    <!-- This element is to trick the browser into centering the modal contents. -->
    <span
      class="sm:inline-block sm:align-middle sm:h-screen"
      aria-hidden="true"
    >
    </span>
    <!--
      Modal panel, show/hide based on modal state.

      Entering: "ease-out duration-300"
        From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        To: "opacity-100 translate-y-0 sm:scale-100"
      Leaving: "ease-in duration-200"
        From: "opacity-100 translate-y-0 sm:scale-100"
        To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
    -->
    <section
      class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full"
    >
      <section
        class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4 md:p-12 md:pb-8 lg:p-24 lg:pb-16"
      >
        <section
          class="modal-close absolute top-0 right-0 cursor-pointer flex flex-col items-center mt-4 mr-4 text-gray text-sm z-50"
        >
          <svg
            class="fill-current text-gray"
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 18 18"
          >
            <path
              d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"
            ></path>
          </svg>
        </section>
        <section class="flex justify-center sm:flex sm:items-start">
          <form action="#" method="POST" id="register-modal" class>
            <section class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
              <!-- block sets input label to display:block so it displays above the input box -->
              <section>
                <!-- block sets input label to display:block so it displays above the input box -->
                <label class="block mb-2 text-indigo-500" for="username">
                  First Name
                </label>
                <!-- p-2 sets padding at 0.5rem -->
                <input
                  class="w-full p-2 mb-6 text-indigo-700 border-b-2 border-indigo-500 outline-none focus:bg-gray-300 rounded"
                  type="text"
                  name="username"
                  placeholder="First Name"
                  id="inputFirst"
                />
                <section>
                  <label class="block mb-2 text-indigo-500" for="username">
                    Last Name
                  </label>
                  <input
                    class="w-full p-2 mb-6 text-indigo-700 border-b-2 border-indigo-500 outline-none focus:bg-gray-300 rounded"
                    type="text"
                    name="username"
                    placeholder="Last Name"
                    id="inputLast"
                  />
                </section>
                {{! <section>
                <label class="block mb-2 text-indigo-500" for="username">
                  Username
                </label>
                <input
                  class="w-full p-2 mb-6 text-indigo-700 border-b-2 border-indigo-500 outline-none focus:bg-gray-300 rounded"
                  type="text"
                  name="username"
                  placeholder="Username"
                />
              </section> }}
                <section>
                  <label class="block mb-2 text-indigo-500" for="username">
                    Email
                  </label>
                  <input
                    class="w-full p-2 mb-6 text-indigo-700 border-b-2 border-indigo-500 outline-none focus:bg-gray-300 rounded"
                    type="email"
                    name="email"
                    placeholder="Email"
                    id="inputEmail"
                  />
                </section>
                <section>
                  <label class="block mb-2 text-indigo-500" for="password">
                    Password
                  </label>
                  <input
                    class="w-full p-2 mb-6 text-indigo-700 border-b-2 border-indigo-500 outline-none focus:bg-gray-300 rounded"
                    type="password"
                    name="password"
                    placeholder="Password"
                    id="inputPassword"
                  />
                </section>
                <section>
                  <input
                    class="w-full bg-indigo-700 hover:bg-indigo-400 text-white font-bold py-2 px-4 mb-6 rounded"
                    type="submit"
                    id="add-user"
                  />
                </section>
              </section>
            </section>
          </form>
        </section>
      </section>
    </section>
  </section>
</section>